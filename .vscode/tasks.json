{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Default Custom Task:C/C++: g++ build & run active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-Wall",
				"-Wextra",
				"-pedantic",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"&&",
				"${workspaceFolder}/./${fileBasenameNoExtension}"

			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}